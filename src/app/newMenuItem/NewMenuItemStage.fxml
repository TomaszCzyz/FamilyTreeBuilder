<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400.0" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.newMenuItem.NewMenuItemController">
   <children>
      <Label text="Filename:" />
      <TextField fx:id="fileNameTextFiled" text="newFamilyTree" />
      <Label fx:id="pathLabel" text="Label" />
      <Button fx:id="changeDirButton" mnemonicParsing="false" onAction="#handleChangeDirButtonAction" text="Change directory" />
      <Region prefHeight="200.0" VBox.vgrow="ALWAYS" />
      <HBox alignment="BOTTOM_RIGHT" nodeOrientation="LEFT_TO_RIGHT" pickOnBounds="false" spacing="5.0">
         <children>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#handleOkButtonAction" text="OK" />
            <Button fx:id="cancelButton" layoutX="10.0" layoutY="85.0" mnemonicParsing="false" onAction="#handleCancelButtonAction" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
