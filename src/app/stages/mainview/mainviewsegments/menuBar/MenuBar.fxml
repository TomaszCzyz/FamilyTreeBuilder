<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.stages.mainview.mainviewsegments.menuBar.MenuBarController">
   <MenuBar>
      <Menu mnemonicParsing="false" text="File">
         <MenuItem mnemonicParsing="false" onAction="#handleNewMenuItemAction" text="New..."/>
         <MenuItem mnemonicParsing="false" onAction="#handleOpenMenuItemAction" text="Open..."/>
         <MenuItem mnemonicParsing="false" onAction="#handleCloseMenuItemAction" text="Close"/>
      </Menu>
      <Menu mnemonicParsing="false" text="Edit">
         <MenuItem mnemonicParsing="false" text="Delete"/>
      </Menu>
      <Menu mnemonicParsing="false" text="Help">
         <MenuItem mnemonicParsing="false" text="About"/>
      </Menu>
   </MenuBar>
   <HBox>
      <padding>
         <Insets bottom="5.0"/>
      </padding>
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButtonAction" text="Save"/>
      <Button mnemonicParsing="false" text="Button"/>
      <Button mnemonicParsing="false" text="Button"/>
   </HBox>
</VBox>
